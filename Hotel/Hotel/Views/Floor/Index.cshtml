@model IEnumerable<Hotel.Models.Floor>
@{
	ViewData["Title"] = "Floors";
}
@section TitleSection {
			 <a class="navbar-brand">Етажи</a>
}
	 <div class="text-left">
		 <a asp-action="Create" asp-controller="Floor">
			 <button type="submit" class="btn btn-info btn-fill btn-wd" style="margin-bottom: 15px;"> 
				 <i class="ti-plus"></i>
				 Създай нов етаж</button>
				 
		 </a>
	</div>
 <div class="card">
		<div class="header">
			 <h4 class="title">Етажи</h4>
			 <p class="category">Информация за всички етажи</p>
		</div>
		<div class="content table-responsive table-full-width">
		<table class="table table-striped">
		<thead>
		<tr>
			<th scope="col" style="text-align: center;">
						@Html.DisplayNameFor(model => model.Level)
			</th>
			<th scope="col" style="text-align: center;">
						@Html.DisplayNameFor(model => model.Number_of_rooms)
			</th>
			<th scope="col" style="text-align: center;">
				Действия
			</th>
		</tr>
	</thead>
	<tbody>
				@foreach (var floor in Model)
				{
				<tr>
					<td style="text-align: center;">
							@floor.Level
				</td>
					<td style="text-align: center;">
							@floor.Number_of_rooms
				</td>

					<td style="display: flex; justify-content: center;">
						<a asp-action="Details" asp-controller="Floor" asp-route-id="@floor.Id" style="margin-right: 5px;">
							<button type="submit" class="btn btn-info  btn-fill btn-wd"> 
							<i class="ti-menu" style="margin-right:8px"></i>Стаи
							</button>
						</a>
							<a asp-action="Edit" asp-controller="Floor" asp-route-id="@floor.Id" style= "margin-right: 5px;">
								 <button type="submit" class="btn btn-success  btn-fill btn-wd"> 
									<i class="ti-pencil" style="margin-right:8px"></i>Редактиране
							</button>
					</a>
								<a onclick="confirmDelete(@floor.Id, '/Floor/Delete/')" style= "margin-right: 8px;">
									 <button   type="submit" class="btn btn-danger   btn-fill btn-wd"> 
									<i class="ti-trash" style="margin-right: 8px"></i>Изтрий
								</button>
						</a>
				</td>
				</tr>
				}
	</tbody>
</table>
</div>
</div>
