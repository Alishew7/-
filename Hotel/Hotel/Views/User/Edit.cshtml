@model Hotel.Models.User

@{
    ViewData["Title"] = "Редактирай информацията за потребителя";
}
@section TitleSection {
                             <a class="navbar-brand">
                                 Редактирай информация за потребител</a>
}
<h4 style="text-align: center">Редактирай информацията за потребителя</h4>
<div class="row" style="
        display: flex;
        align-items: center;
        flex-direction: column;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

                         <div class="form-group">
                <label asp-for="Role" style="margin: 8px" class="control-label"></label>
                <select asp-for="Role" class="form-control"> 
                    @foreach (var role in Enum.GetValues(typeof(Role)))
                    {
                                 <option value="@role">@role</option>
                    }
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; padding-left: 25%">
    <a asp-action="Index">Връщане към списъка</a>
</div>

