@model IEnumerable<Hotel.Models.User>
@{
    ViewData["Title"] = "Потребители";
}
@section TitleSection {
                 <a class="navbar-brand">Потребители</a>
}
<div class="text-left">
         <a asp-action="Create" asp-controller="User">
             <button type="submit" class="btn btn-info btn-fill btn-wd" style="margin-bottom: 15px;"> 
                 <i class="ti-plus"></i>
                 Създай нов потребител</button>

         </a>
</div>
 <div class="card">
        <div class="header">
             <h4 class="title">Потребители</h4>
             <p class="category">Информация за всички потребители</p>
        </div>
        <div class="content table-responsive table-full-width">
        <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col" style="text-align: center">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col" style="text-align: center">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th scope="col" style="text-align: center;">
                Действия:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model) {
         <tr>
                <td style="text-align: center">
                @user.UserName
            </td>
                <td style="text-align: center">
                @user.Password
            </td>
                    <td style="display: flex; justify-content: center;">
                            <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" style= "margin-right: 5px;">
                                <button type="submit" class="btn btn-success  btn-fill btn-wd"> 
                                    <i class="ti-pencil" style="margin-right:8px"></i>Редактирай
                                </button>
                            </a>
                                    <a onclick="confirmDelete(@user.Id, '/User/Delete/')" style= "margin-right: 5px;">
                                <button type="submit" class="btn btn-danger   btn-fill btn-wd"> 
                                    <i class="ti-trash" style="margin-right: 8px"></i>Изтрий
                                </button>
                            </a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
